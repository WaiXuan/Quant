//Functions 
//-----------------------------------------------------------------------------{
n = bar_index

atr = ta.atr(length = 200)

//cum -> source所有元素的總和
cmean_range = ta.cum(high - low) / n 

//HL Output function
hl() => [high, low]

//Get ohlc values functions
get_ohlc() =>[close[1], open[1], high, low, high[2], low[2]]

//Display Structure function
display_Structure(x, y, txt, css, dashed, down, lbl_size) =>
    structure_line = line.new(x1 = x, y1 = y, x2 = n, y2 = y
      , color = css
      , style = dashed ? line.style_dashed : line.style_solid)

    structure_lbl = label.new(x = int(math.avg(x, n)), y = y , text = txt
      , color = TRANSP_CSS
      , textcolor = css
      , style = down ? label.style_label_down : label.style_label_up
      , size = lbl_size)

    if mode == 'Present'
        line.delete(structure_line[1])
        label.delete(structure_lbl[1])

//Swings detection/measurements 波動檢測/測量
swings(len) =>
    var os = 0

    upper = ta.highest(len) 
    lower = ta.lowest(len)

    // if high[len] > upper    
    //   os := 0
    // else if low[len] < lower
    //   os := 1 
    // else 
    //   os := os[1]

    os := high[len] > upper ? 0 : low[len] < lower ? 1 : os[1]

    top = os == 0 and os[1] != 0 ? high[len] : 0
    // 此K線top 為最高點 且 前一根K線 不是
    btm = os == 1 and os[1] != 1 ? low[len] : 0

    [top, btm]

// Order block coordinates(座標) function
ob_coord(use_max, loc, target_top, target_btm, target_left, target_type) =>
    min = 99999999.
    max = 0.
    idx = 1
    //threshold臨界點 filter 篩選
    ob_threshold = ob_filter == 'Atr' ? atr : cmean_range

    // Serach for higest/lowest high within the structure interval and get range
    if use_max
        for i = 1 to (n - loc)-1 
            if (high[i] - low[i]) < ob_threshold[i] * 2
                max := math.max(high[i], max)
                min := max == high[i] ? low[i] : min
                idx := min == high[i] ? i : idx
    else 
        for i = 1 to (n - loc)-1
            if (high[i] - low[i]) < ob_threshold[i] * 2
                min := math.min(low[i], min)
                max := min == low[i] ? high[i] : max
                idx := min == low[i] ? i : idx
    array.unshift(id = target_top, value = max) 
    array.unshift(id = target_btm, value = min)     
    array.unshift(id = target_left, value = time[idx])     
    array.unshift(id = target_type, value = use_max ? -1 : 1)     

// Set Order Blocks
// display_ob(boxes, target_top, target_btm, target_left, target_type, show_last, swing, size)=>
//     for i = 0 to math.min(show_last-1, size-1)

    
