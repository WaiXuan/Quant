//Order Blocks Arrays
//-----------------------------------------------------------------------------{        
var ob_top = array.new_float(0)
var ob_btm = array.new_float(0)
var ob_left = array.new_int(0)
var ob_type = array.new_int(0)
            
var iob_top = array.new_float(0)
var iob_btm = array.new_float(0)
var iob_left = array.new_int(0)
var iob_type = array.new_int(0)        

//-----------------------------------------------------------------------------}
//Pivot High BMS/SMS
//-----------------------------------------------------------------------------{

//Filtering
var bull_concordant = true

// 小級別?
if ifilter_confluence 
    bull_concordant := high - math.max(close, open) > math.min(close, open - low)

// Detect internal bullish Structrue 檢測小級別 看漲結構
if ta.crossover(close, itop_y) and itop_cross and top_y != itop_y and bull_concordant
    bool sms = na

    // 控制BMS OR SMS 可以在此紀錄
    if itrend < 0
        sms := true
        bull_isms_alert := true
    else 
        bull_ibms_alert := true
    
    txt = sms ? 'SMS' : 'BMS'

    if show_internals
        if show_ibull == 'All' or (show_ibull == 'BMS' and not sms) or (show_ibull == 'SMS' and sms)
            display_Structure(itop_x, itop_y, txt, ibull_css, true, true, internal_structure_lbl_size)
    
    itop_cross := false
    itrend := 1

    //Internal Order Block
    // iob_type =???
    if show_iob
          ob_coord(false, itop_x, iob_btm, iob_left, iob_type)
// Detect bullish Structure
if ta.crossover(close, top_y) and top_cross
    bool sms = na
    
    if trend < 0
        sms := true
        bull_sms_alert := true
    else 
        bull_bms_alert := true

    txt = sms ? 'SMS' : 'BMS'
    
    if show_Structure
        if show_bull == 'All' or (show_bull == 'BMS' and not sms) or (show_bull == 'SMS' and sms)
            display_Structure(top_x, top_y, txt, bull_css, false, true, swing_structure_lbl_size)
    
    //Order Block
    if show_ob
        ob_coord(false, top_x, ob_top, ob_btm, ob_left, ob_type)

    top_cross := false
    trend := 1

//-----------------------------------------------------------------------------}
//Order Blocks
//-----------------------------------------------------------------------------{
//Set order blocks
var iob_boxes = array.new_box(0)
var ob_boxes = array.new_box(0)

//Delete internal order blocks box coordinates if top/bottom is broken
// 看一下iobtype有啥
for element in iob_type
    index = array.indexof(id = iob_type, value = element) 

